<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    tools:context="com.example.android.musicalapp.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        >


        <ImageView
            android:id="@+id/paintedBird"
            android:layout_width="match_parent"
            android:layout_height="368dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/siouxsie" />

        <TextView
            android:id="@+id/siouxsie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_marginRight20"
            android:layout_marginRight="@dimen/layout_mR20"
            android:fontFamily="@string/fontFcursive"
            android:paddingTop="@dimen/paddingT10"
            android:text="@string/textSiousxie"
            android:textAlignment="center"
            android:textColor="#da0e0e"
            android:textSize="@dimen/textS32"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/painted_bird"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/fontFamilycursive"
            android:paddingBottom="@dimen/paddingB10"
            android:text="A kiss in a dreamhouse"
            android:textColor="#A08768"
            android:textAlignment="center"
            android:textSize="35sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">


            <ImageButton
                android:id="@+id/rewindButton"
                android:layout_width="@dimen/layouthei45"
                android:layout_height="@dimen/layouthe45"
                android:background="#000000"
                android:src="@drawable/rewind" />

            <ImageButton
                android:id="@+id/pauseButton"
                android:layout_width="@dimen/layouth45dp"
                android:layout_height="@dimen/layouth45"
                android:background="#000000"
                android:src="@drawable/pause" />

            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="@dimen/layout_height4"
                android:layout_height="@dimen/layout_height3"
                android:layout_gravity="center_vertical"
                android:background="#000000"
                android:src="@drawable/play" />


            <ImageButton
                android:id="@+id/fastButton"
                android:layout_width="@dimen/layout_height45"
                android:layout_height="@dimen/layout_height_45dp"
                android:background="#000000"
                android:src="@drawable/fast_forward" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>
