<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.musicalapp.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <ImageView
            android:id="@+id/twoLovers"
            android:layout_width="match_parent"
            android:layout_height="378dp"

            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mary" />


        <TextView
            android:id="@+id/mary"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:fontFamily="cursive"
            android:paddingTop="10dp"
            android:text="Marry Wells"
            android:textAlignment="center"
            android:textColor="#ea9c43"
            android:textSize="42sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/two_lovers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:paddingBottom="10dp"
            android:text="Two Lovers"
            android:textAlignment="center"
            android:textSize="50sp"
            android:textStyle="bold"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">


            <ImageButton
                android:id="@+id/rewindButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/rewind" />

            <ImageButton
                android:id="@+id/pauseButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/pause" />

            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/play" />


            <ImageButton
                android:id="@+id/fastButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/fast_forward" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>

